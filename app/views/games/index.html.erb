<p id="notice"><%= notice %></p>

<h1>Games</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Tablero</th>
      <th>Fotos de piezas</th>
      <th>Rules</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @games.each do |game| %>
      <tr>
        <td><%= game.name %></td>
        <td><%= link_to rails_blob_path(game.picture_one, disposition: "attachment") do%>
            <%= image_tag game.picture_one.variant(resize: "100x100", type: :grayscale) %>
            <% end  %></td>
        <td><% game.pictures.each do |img| %> 
            <%= link_to rails_blob_path(img, disposition: "attachment") do%>
            <%= image_tag img.variant(resize: "100x100", type: :grayscale) %>
            <% end  %>
        <% end %></td>
        <td><%= link_to "Download rules", rails_blob_path(game.rules, disposition: "attachment")%></td>
        <td><%= link_to 'Show', game %></td>
        <td><%= link_to 'Edit', edit_game_path(game) %></td>
        <td><%= link_to 'Destroy', game, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Game', new_game_path %>
